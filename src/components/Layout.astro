---
import Head from './Head.astro';

export interface Props {
  title: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html
  lang="en"
  class="h-screen"
>
  <Head>
    <title>{title}</title>
  </Head>
  <body
    class="relative flex h-auto flex-col justify-center bg-black"
    style="--scroll:0.001"
  >
    <slot />
  </body>
</html>
