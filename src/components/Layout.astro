---
import Footer from './Footer.astro';
import Head from './Head.astro';
import ScrollProgress from './ScrollProgress.astro';
import StickyLogo from './StickyLogo.astro';
import Header from './Header.astro';

export interface Props {
  title: string;
}

const { title } = Astro.props as Props;
---

<!doctype html>
<html
  lang="en"
  class="h-screen"
>
  <Head>
    <title>{title}</title>
  </Head>
  <body
    class="relative flex h-auto w-full flex-col justify-center bg-black"
    style="--scroll:0.001"
  >
    <StickyLogo />
    <div
      id="main-container"
      class="relative flex h-full min-h-screen w-full flex-col items-center overflow-x-hidden bg-gradient-to-b from-slate-900 to-slate-800 text-center duration-100 text-white"
    >
      <ScrollProgress />
      <Header />
      <slot />
    </div>
    <Footer />
  </body>
</html>
