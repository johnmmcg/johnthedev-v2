---
import Head from './Head.astro';

export interface Props {
  title: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html
  lang="en"
  class="h-screen"
>
  <Head>
    <title>{title}</title>
  </Head>
  <body class="flex h-screen justify-center bg-black">
    <slot />
  </body>
</html>
