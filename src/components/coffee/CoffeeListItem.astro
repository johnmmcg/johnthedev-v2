---
import type { Coffee } from "../../pages/coffee/[id].astro";
const { coffee } = Astro.props;

const { id, name, country, flag_emoji, producer, roaster } = coffee as Coffee;
---

<li
  class="flex h-full w-full flex-col overflow-hidden rounded-xl rounded-tr-none border border-slate-500"
  transition:name={`coffee-container-${id}`}
  id={id.toString()}
>
  <a
    href={`/coffee/${id}`}
    class="group relative h-full w-full bg-slate-700 transition-all hover:bg-slate-600"
  >
    <span
      class="absolute right-0 top-0 aspect-square rounded-bl-xl border-b border-l border-b-slate-500 border-l-slate-500 bg-slate-900 p-2"
      transition:name={`coffee-flag-${id}`}
    >
      {flag_emoji}
    </span>
    <div class="flex h-full flex-col justify-between gap-12 p-4 text-left">
      <div class="relative flex flex-col">
        <h3 class="text-6xl font-thin">
          {country.slice(0, 3).toUpperCase()}
        </h3>
        <h2 class="text-xl" transition:name={`coffee-name-${id}`}>{name}</h2>
      </div>
      <div class="flex flex-col">
        <p class="text-base">{producer}</p>
        <p class="text-base">{roaster.name}</p>
      </div>
    </div>
  </a>
</li>
