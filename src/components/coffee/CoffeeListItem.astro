---
import type { Coffee } from "../../pages/coffee/[id].astro";
const { coffee } = Astro.props;

const { id, name, country, flag_emoji } = coffee as Coffee;
---

<li
  class="flex w-full flex-col items-center p-2 sm:w-1/2"
  transition:name={`coffee-container-${id}`}
  id={id.toString()}
>
  <a
    href={`/coffee/${id}`}
    class="group h-full w-full rounded bg-slate-700 p-2 py-4 transition-all hover:bg-slate-600 sm:p-4"
  >
    <div class="relative flex items-center justify-between sm:gap-2">
      <h2
        class="text-left text-base font-bold sm:text-lg"
        transition:name={`coffee-main-header-${id}`}
      >
        {name}
      </h2>
      <h3
        class="text-right text-sm sm:text-base"
        transition:name={`coffee-origin-${id}`}
      >
        <span class="text-slate-300">
          {country.slice(0, 3).toUpperCase()}
        </span>
        <span class="text-xl">
          {` ${flag_emoji}`}
        </span>
      </h3>
    </div>
  </a>
</li>
