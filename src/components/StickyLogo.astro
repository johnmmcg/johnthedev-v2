<div
  id="sticky-logo"
  class="hover:cursor fixed left-0 top-0 z-50 h-[60px] w-[60px] self-start bg-transparent drop-shadow-2xl transition sm:h-[100px] sm:w-[100px]"
>
  <a
    href="/#top"
    class="relative flex h-full w-full items-center justify-center"
  >
    <div
      class="cube-wrap text-xm font-extrabold text-white transition sm:text-2xl"
    >
      <div class="cube">
        <div class="side top">
          <p class="shadow-black text-shadow-sm">JM</p>
        </div>
        <div class="side bottom">
          <p class="shadow-black text-shadow-sm">JM</p>
        </div>
        <div class="side front">
          <p class="shadow-black text-shadow-sm">JM</p>
        </div>
        <div class="side back">
          <p class="shadow-black text-shadow-sm">JM</p>
        </div>
      </div>
    </div>
  </a>
</div>

<style>
  .cube-wrap {
    --size: 50px;
    width: var(--size);
    height: var(--size);
    perspective: 100vmin;
  }

  @media only screen and (max-width: 640px) {
    .cube-wrap {
      --size: 30px;
    }
  }

  .cube {
    width: var(--size);
    height: var(--size);
    transform-style: preserve-3d;
    transform: rotateX(0deg);
    animation: rotate-x 1s linear;
  }
  @keyframes rotate-x {
    to {
      transform: rotateX(-360deg);
    }
  }

  .side {
    display: flex;
    align-items: center;
    justify-content: center;
    position: absolute;
    width: var(--size);
    height: var(--size);
    background-color: #1e293b;
    backface-visibility: visible;
    border: 2px solid white;
    z-index: 1;
  }
  .top {
    background-color: theme("colors.blue.600");
    background: radial-gradient(
      circle at center,
      theme("colors.blue.950"),
      theme("colors.blue.600")
    );
    transform: rotateX(90deg) translateZ(calc(var(--size) * 0.5));
  }
  .bottom {
    background-color: theme("colors.orange.600");
    background: radial-gradient(
      circle at center,
      theme("colors.orange.950"),
      theme("colors.orange.600")
    );
    transform: rotateX(90deg) translateZ(calc(var(--size) * -0.5)) scaleY(-1);
  }
  .front {
    background-color: #059669;
    background: radial-gradient(circle at center, #032a1f, #059669);

    transform: translateZ(calc(var(--size) * 0.5));
  }
  .back {
    background-color: theme("colors.pink.600");
    background: radial-gradient(
      circle at center,
      theme("colors.pink.950"),
      theme("colors.pink.600")
    );
    transform: translateZ(calc(var(--size) * -0.5)) scaleY(-1);
  }

  #sticky-logo * {
    /* Pause the animation */
    animation-play-state: paused;
    /* Bind the animation to scroll */
    animation-delay: calc(var(--scroll) * -0.01s);
    /* These last 2 properites clean up overshoot weirdness */
    animation-iteration-count: 1;
    animation-fill-mode: both;
  }
</style>
