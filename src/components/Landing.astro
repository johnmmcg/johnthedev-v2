---
import Avatar from './Avatar.astro';
import Ring from './Ring.jsx';
import '../input.css';
import TextBlock from './TextBlock.astro';
import Greeting from './Greeting.astro';
import ReferencesSection from './ReferencesSection.astro';
import Footer from './Footer.astro';
import TechList from './TechList.astro';
import ShowOnScrollObserver from '../scripts/ShowOnScrollObserver.astro';
import Header from './Header.astro';
import companies from '../constants/companies';
import ScrollProgress from './ScrollProgress.astro';
---

<ShowOnScrollObserver />
<div
  id="main-container"
  class="relative flex h-auto w-full flex-col overflow-x-hidden bg-gradient-to-b from-slate-900 to-slate-800 text-center"
>
  <ScrollProgress />
  <Header />
  <div
    class="fade-in relative m-auto flex flex-col items-center justify-center gap-2 p-2 text-4xl font-bold text-white"
  >
    <Greeting />
  </div>
  <div class="fade-in relative flex h-1/2 sm:h-[500px]">
    <Ring client:load />
    <Avatar />
  </div>
  <div
    class="fade-in relative m-auto flex flex-col items-center justify-center gap-2 p-2 text-center text-xl font-bold leading-loose text-white sm:gap-6 sm:align-bottom sm:text-2xl sm:leading-loose"
  >
    <TextBlock />
  </div>
  <div
    class="fade-in relative m-auto flex flex-col items-center justify-center gap-6 p-2 text-center text-xl font-bold leading-loose text-white sm:align-bottom sm:text-2xl sm:leading-loose"
  >
    <TechList />
  </div>
  <div>
    <section
      class="m-auto mt-2 mb-6 flex h-auto max-w-4xl flex-col gap-8 p-2 text-center text-base font-bold text-white sm:text-2xl"
    >
      <h2>
        I have 5+ years of software engineering experience.
        <br />
        It's been an honor to work for these companies:
      </h2>
      <ul class="grid grid-cols-2 gap-y-10 gap-x-4 md:grid-cols-4">
        {
          companies.map((item) => (
            <li class="flex h-auto flex-col justify-end">
              <a
                class="flex w-full flex-col items-center justify-end gap-2"
                href={item.url}
                target="_blank"
              >
                <img
                  class="h-auto w-2/3"
                  src={item.image_url}
                  alt={`${item.company} Logo`}
                  title={`${item.company} Logo`}
                />
                <ul>
                  <li class="text-sm">{item.role}</li>
                  <li class="text-xs">{item.time}</li>
                </ul>
              </a>
            </li>
          ))
        }
      </ul>
    </section>
  </div>

  <div class="relative">
    <ReferencesSection />
  </div>
  <Footer />
</div>
